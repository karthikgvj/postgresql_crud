<h2>Update The Values</h2>
<%= form_for @employees do |f| %>
    <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :age %><br>
        <%= f.number_field :age %>
    </div>
    <div>
        <%= f.label :gender %><br>
        <%= f.select(:gender, EmployeesController::GENDER) %>
    </div>
    <div>
        <%= f.label :designation %><br>
        <%= f.text_area :designation %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>

</div>